<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/product"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
   <LinearLayout
       android:id="@+id/linear1_category_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/slogan_category"
       android:orientation="horizontal"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:layout_marginTop="45dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp">

       <ImageView
           android:id="@+id/longbootsimg"
           android:layout_width="130dp"
           android:layout_height="150dp"
           android:src="@drawable/longboots" />

       <ImageView
           android:id="@+id/belliesimg"
           android:layout_width="130dp"
           android:layout_height="150dp"
           android:src="@drawable/bellies" />

       <ImageView
           android:id="@+id/sandalsimg"
           android:layout_width="130dp"
           android:layout_height="150dp"
           android:src="@drawable/sandals"
           />



   </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/shoesimg"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/shoes"
            />
        <ImageView
            android:id="@+id/sportshoesimg"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/sportshoes"
            />
        <ImageView
            android:id="@+id/sleeprsimg"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/sleeprs"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/bootimg"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/boot"
            android:layout_marginStart="16dp"
            />
        <ImageView
            android:id="@+id/rubberbootsimg"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/rubberboots"
            />

    </LinearLayout>







</RelativeLayout>